<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.allanloji.language_cast.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@color/light_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:text="Sarah Parmenter"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name"
            android:layout_below="@+id/name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="LONDRES, INGLATERRA"
            android:textColor="@color/cardview_light_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="87dp"
            android:layout_height="84dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/photoautor_400x400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/personalDetailsLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/header"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:text="Detalles Personales"
            android:textColor="@color/com_facebook_button_background_color_focused_disabled"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header" />

        <TextView
            android:id="@+id/nameLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/personalDetailsLbl"
            android:layout_alignStart="@+id/personalDetailsLbl"
            android:layout_below="@+id/personalDetailsLbl"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:text="Nombre"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/personalDetailsLbl" />

        <TextView
            android:id="@+id/locationLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nameLbl"
            android:layout_alignStart="@+id/nameLbl"
            android:layout_below="@+id/nameLbl"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:text="Ubicacion"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameLbl" />

        <TextView
            android:id="@+id/cardBioLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/locationLbl"
            android:layout_alignStart="@+id/locationLbl"
            android:layout_below="@+id/locationLbl"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:text="Biografia"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/locationLbl" />

        <TextView
            android:id="@+id/languagesLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cardBioLbl"
            android:layout_alignStart="@+id/cardBioLbl"
            android:layout_below="@+id/cardBioLbl"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:text="Lenguajes"
            android:textColor="@color/com_facebook_button_background_color_focused_disabled"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardBioLbl" />

        <GridLayout
            android:id="@+id/mainGrid"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="8"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:columnOrderPreserved="false"
            android:padding="14dp"
            android:rowCount="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">


            <ImageView
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/espanol" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ingles" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/frances" />
        </GridLayout>

        <TextView
            android:id="@+id/nameDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="30dp"
            android:text="Sarah Parmenter"
            android:textColor="@color/com_facebook_likeboxcountview_border_color"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/nameLbl"
            app:layout_constraintTop_toBottomOf="@+id/personalDetailsLbl" />

        <TextView
            android:id="@+id/locationDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            android:text="Londres, Inglaterra"
            android:textColor="@color/com_facebook_button_background_color_focused_disabled"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/locationLbl"
            app:layout_constraintTop_toBottomOf="@+id/nameDetails" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            android:text="Directora de empresa, disenadora y gusto por los perros"
            android:textColor="@color/com_facebook_button_background_color_focused_disabled"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/cardBioLbl"
            app:layout_constraintTop_toBottomOf="@+id/locationDetails" />


    </android.support.constraint.ConstraintLayout>

</FrameLayout>
